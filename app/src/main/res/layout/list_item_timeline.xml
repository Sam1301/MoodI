<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">
    <View android:id="@+id/list_item_schedule_line"
        android:background="#1e88e5"
        android:layout_height="match_parent"
        android:layout_width="3dp"
        android:layout_marginLeft="30dp" />
    <TextView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/event_list_item_time_hrs"
        android:text="10\nam"
        android:layout_marginLeft="9dp"
        android:layout_centerVertical="true"
        android:background="@drawable/list_icon_timeline"
        android:gravity="center"
        android:visibility="invisible" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_timeline_rectangle"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/list_item_schedule_line"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:layout_centerVertical="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_list_item_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_list_item_description"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/event_list_item_name"
            android:layout_alignLeft="@+id/event_list_item_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_list_item_venue"
            android:layout_alignBottom="@+id/event_list_item_description"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />
    </RelativeLayout>
</RelativeLayout>