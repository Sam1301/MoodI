
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
            <!-- Collapsible Layout for Last call -->
        <ImageView
            android:src="@drawable/small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_alignTop="@id/toolbar"
            android:layout_above="@+id/profile_welcome_title"/>
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@drawable/toolbar_shadow_gradient"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            style="@style/AppToolbar">

        </android.support.v7.widget.Toolbar>


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/profile_dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_name"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/profile_dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_mi_no"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/profile_name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_welcome_title"
            android:textSize="24sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/profile_mi_no"
            android:id="@+id/profile_welcome_title"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_welcome_msg"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_below="@+id/profile_welcome_title"
            android:id="@+id/profile_welcome_msg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_fav_event_list"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_below="@+id/profile_welcome_msg">
        </LinearLayout>

    </RelativeLayout>
</ScrollView>

