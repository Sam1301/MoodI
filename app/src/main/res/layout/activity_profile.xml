
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
            <!-- Collapsible Layout for Last call -->
        <View android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/system_bar_bg"/>
        <ImageView
            android:src="@drawable/profile_backdrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_alignTop="@id/toolbar"
            android:layout_above="@+id/profile_welcome_title"/>
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@drawable/toolbar_shadow_gradient"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@+id/system_bar_bg"
            style="@style/AppToolbar">

        </android.support.v7.widget.Toolbar>


        <org.iitb.moodi.ui.widget.CircularDPView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/profile_dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"/>
        <in.workarounds.typography.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_name"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/profile_dp"
            android:textColor="#fff"
            app:font_name="Roboto"
            app:font_variant="Bold"
            android:textSize="18sp"/>
        <in.workarounds.typography.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_mi_no"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/profile_name"
            app:font_name="Roboto"
            app:font_variant="Regular"
            android:textColor="#fff"
            android:textSize="14sp"/>
        <in.workarounds.typography.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_welcome_title"
            android:textSize="18sp"
            app:font_name="Roboto"
            app:font_variant="Regular"
            android:textColor="#000"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/profile_mi_no"
            android:id="@+id/profile_welcome_title"/>
        <in.workarounds.typography.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_welcome_msg"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="14sp"
            android:layout_below="@+id/profile_welcome_title"
            android:id="@+id/profile_welcome_msg"
            app:font_name="Roboto"
            app:font_variant="Regular"
            android:textColor="#8B8787"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c2c2c2"
            android:layout_below="@+id/profile_welcome_msg"
            android:id="@+id/divider"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_fav_event_list"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_below="@+id/divider">
        </LinearLayout>

    </RelativeLayout>
</ScrollView>

