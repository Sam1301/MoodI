<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="org.iitb.moodi.ui.activity.SplashActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_splash"
        android:scaleType="centerCrop"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000"/>

    <ImageView android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logounit"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"/>

    <in.workarounds.typography.TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login to Facebook"
        android:drawableLeft="@drawable/com_facebook_button_icon"
        android:drawablePadding="13dp"
        android:background="@drawable/com_facebook_button_background"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:padding="15dp"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/fb_login_button"
        app:font_name="Roboto"
        app:font_variant="Medium"
        android:clickable="true"/>

    <!--<com.facebook.login.widget.LoginButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/fb_login_button"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />-->


</RelativeLayout>
