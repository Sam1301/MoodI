<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">
    <in.workarounds.typography.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countdown_days"
        android:gravity="center"
        android:text="78"
        android:layout_toLeftOf="@+id/dummy"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="62dp"
        android:textSize="35sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        app:font_name="Roboto"
        app:font_variant="Thin"/>
    <in.workarounds.typography.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DAYS"
        android:id="@+id/countdown_label_days"
        android:layout_alignLeft="@+id/countdown_days"
        android:layout_alignRight="@+id/countdown_days"
        android:layout_below="@+id/countdown_days"
        android:gravity="center"
        android:textColor="@color/white"
        app:font_name="Roboto"
        app:font_variant="Bold"
        android:textSize="13sp"/>
    <in.workarounds.typography.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countdown_hrs"
        android:gravity="center"
        android:layout_toLeftOf="@+id/dummy"
        android:text="13"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="3dp"
        android:textSize="35sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        app:font_name="Roboto"
        app:font_variant="Thin" />
    <in.workarounds.typography.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOURS"
        android:id="@+id/countdown_label_hrs"
        android:layout_below="@+id/countdown_hrs"
        android:layout_alignLeft="@+id/countdown_hrs"
        android:layout_alignRight="@+id/countdown_hrs"
        android:gravity="center"
        android:textColor="@color/white"
        app:font_name="Roboto"
        app:font_variant="Bold"
        android:textSize="13sp"/>
    <View android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/dummy"
        android:layout_centerHorizontal="true"/>
    <in.workarounds.typography.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countdown_min"
        android:gravity="center"
        android:text="54"
        android:layout_toRightOf="@+id/dummy"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="2dp"
        android:textSize="35sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        app:font_name="Roboto"
        app:font_variant="Thin"/>
    <in.workarounds.typography.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MINS"
        android:id="@+id/countdown_label_mins"
        android:layout_below="@+id/countdown_min"
        android:layout_alignLeft="@+id/countdown_min"
        android:layout_alignRight="@+id/countdown_min"
        android:gravity="center"
        android:textColor="@color/white"
        app:font_name="Roboto"
        app:font_variant="Bold"
        android:textSize="13sp"/>

    <in.workarounds.typography.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countdown_sec"
        android:gravity="center"
        android:text="54"
        android:layout_toRightOf="@+id/dummy"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="57dp"
        android:textSize="35sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        app:font_name="Roboto"
        app:font_variant="Thin" />
    <in.workarounds.typography.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SECS"
        android:id="@+id/countdown_label_sec"
        android:layout_below="@+id/countdown_sec"
        android:layout_alignLeft="@+id/countdown_sec"
        android:layout_alignRight="@+id/countdown_sec"
        android:gravity="center"
        android:textColor="@color/white"
        app:font_name="Roboto"
        app:font_variant="Bold"
        android:textSize="13sp"/>

    <in.workarounds.typography.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Countdown to the best days of your life"
        android:id="@+id/countdown_message"
        android:layout_below="@+id/countdown_label_hrs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        app:font_name="Pacifico"/>

</RelativeLayout>